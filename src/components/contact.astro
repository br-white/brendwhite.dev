---
import { Phone, Mail, MessageCircle } from "lucide-react";
---

<section id="contact" class="w-full py-12 border-t border-[#ffffff10]">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Let's talk</h2>
    <h3 class="text-4xl md:text-5xl font-medium text-[var(--white)] mb-6">
      Contact
    </h3>
    <div class="mx-auto text-center">
      <div class="text-[var(--white-icon)] mb-8">
        <p class="text-lg mb-6">
          Have a question or a project in mind? Feel free to reach out.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <a
            href="tel:+19105521667"
            target="_blank"
            class="flex flex-col items-center gap-2 p-6 bg-[#1414149c] rounded-xl border border-[var(--white-icon-tr)]"
          >
            <div
              class="w-12 h-12 bg-[var(--sec)] rounded-full flex items-center justify-center mb-2"
            >
              <Phone className="w-6 h-6 text-white" stroke-width="2" />
            </div>
            <span class="text-sm text-[var(--white-icon)]">Phone</span>
            <span
              class="text-[var(--white)] font-medium hover:text-[var(--sec)] transition-colors"
              >(910) 552-1667</span
            >
          </a>

          <a
            class="flex flex-col items-center gap-2 p-6 bg-[#1414149c] rounded-xl border border-[var(--white-icon-tr)]"
            href="mailto:sudobwhite@gmail.com"
            target="_blank"
          >
            <div
              class="w-12 h-12 bg-[var(--sec)] rounded-full flex items-center justify-center mb-2"
            >
              <Mail className="w-6 h-6 text-white" stroke-width="2" />
            </div>
            <span class="text-sm text-[var(--white-icon)]">Email</span>
            <span
              class="text-[var(--white)] font-medium hover:text-[var(--sec)] transition-colors"
              >sudobwhite@gmail.com</span
            >
          </a>

          <a
            class="flex flex-col items-center gap-2 p-6 bg-[#1414149c] rounded-xl border border-[var(--white-icon-tr)]"
            href="https://wa.me/19105521667"
            target="_blank"
          >
            <div
              class="w-12 h-12 bg-[var(--sec)] rounded-full flex items-center justify-center mb-2"
            >
              <MessageCircle className="w-6 h-6 text-white" stroke-width="2" />
            </div>
            <span class="text-sm text-[var(--white-icon)]">WhatsApp</span>
            <span
              class="text-[var(--white)] font-medium hover:text-[var(--sec)] transition-colors"
              >+1 (910) 552-1667</span
            >
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
