---
import LikeButton from "../React/LikeButton.tsx";
import { Github, Linkedin, Mail } from "lucide-react";
---

<footer class="w-full py-12 border-t border-[#ffffff10]">
  <div class="max-w-5xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-10">
      <div class="flex flex-col lg:items-start items-center space-y-6 gap-9">
        <div class="flex space-x-6 sm:space-x-8">
          <a
            href="https://github.com/toptal126"
            target="_blank"
            class="flex flex-col items-center group"
            aria-label="GitHub"
          >
            <div
              class="text-[var(--white-icon)] hover:text-[var(--white)] transition duration-300 ease-in-out"
            >
              <Github className="size-8" stroke-width="1.5" />
            </div>
          </a>
          <a
            href="https://www.linkedin.com/in/brendan-white-63b52431b/"
            target="_blank"
            class="flex flex-col items-center group"
            aria-label="LinkedIn"
          >
            <div
              class="text-[var(--white-icon)] hover:text-[var(--white)] transition duration-300 ease-in-out"
            >
              <Linkedin className="size-8" stroke-width="1.5" />
            </div>
          </a>
          <a
            href="mailto:brend.white1991@gmail.com"
            target="_blank"
            class="flex flex-col items-center group"
            aria-label="Email"
          >
            <div
              class="text-[var(--white-icon)] hover:text-[var(--white)] transition duration-300 ease-in-out"
            >
              <Mail className="size-8" stroke-width="1.5" />
            </div>
          </a>
        </div>
        <LikeButton client:load />
      </div>

      <div class="flex flex-col items-center md:items-start space-y-6">
        <div class="grid grid-cols-1 gap-3 w-full max-w-xs">
          {
            [
              {
                desc: "Built with",
                name: "Astro",
                icon: "/svg/astro.svg",
                alt: "Astro Logo",
              },
              {
                desc: "Styled with",
                name: "TailwindCSS",
                icon: "/svg/tailwindcss.svg",
                alt: "TailwindCSS Logo",
              },
              {
                desc: "Deployed on",
                name: "Netlify",
                icon: "/svg/netlify.svg",
                alt: "Netlify Logo",
              },
            ].map((tech) => (
              <div class="flex items-center space-x-3">
                <span class="text-[var(--white-icon)] text-sm">
                  {tech.desc}
                </span>
                <img
                  src={tech.icon}
                  alt={tech.alt}
                  class="h-5 w-5 object-contain filter brightness-0 invert opacity-50"
                  loading="lazy"
                />
                <span class="text-[var(--white-icon)] text-sm">
                  {tech.name}
                </span>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-[#ffffff10]">
      <p class="text-center text-sm text-[var(--white-icon)] space-y-2">
        <!-- If you are using this template, by MIT License you can't remove the copyright notice -->
        <span class="block sm:inline"
          >Copyright Â© 2025 <a href="https://github.com/toptal126"
            >Brendan White</a
          >. All rights reserved.</span
        >
      </p>
    </div>
  </div>
</footer>
