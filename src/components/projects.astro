---
import { Image } from "astro:assets";
import valenciaSeal from "../../public/certification/Seal_of_Valencia_College.svg.png";
import oracleBadge from "../../public/certification/Oracle_Professional_Badge_final.png";
import awsBadge from "../../public/certification/aws-solution-architect.webp";
---

<section
  id="education"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">
      Academic background
    </h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Education</h3>

    <div
      class="flex flex-col md:flex-row items-center gap-8 bg-[#1414149c] rounded-2xl p-8 border border-[var(--white-icon-tr)]"
    >
      <div class="flex-shrink-0">
        <Image
          src={valenciaSeal as ImageMetadata}
          alt="Valencia College Seal"
          class="w-32 h-32 object-contain"
        />
      </div>
      <div class="flex-grow text-center md:text-left">
        <h4 class="text-2xl md:text-3xl font-semibold mb-2">
          Bachelor of Computer Science
        </h4>
        <p class="text-xl text-[var(--white-icon)] mb-2">Valencia College</p>
        <p class="text-lg text-[var(--white-icon)] mb-4">2011 - 2015</p>
        <p class="text-[var(--white-icon)] leading-relaxed">
          Comprehensive education in computer science fundamentals, software
          engineering principles, and modern development practices. Foundation
          for a successful career in full-stack development and enterprise
          software solutions.
        </p>
      </div>
    </div>

    <div class="mt-12">
      <h4 class="text-2xl md:text-3xl font-semibold mb-6 text-center">
        Certifications
      </h4>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div
          class="bg-[#1414149c] rounded-xl p-6 border border-[var(--white-icon-tr)] text-center"
        >
          <div class="w-20 h-20 mx-auto mb-4 flex items-center justify-center">
            <Image
              src={awsBadge as ImageMetadata}
              alt="AWS Certified Solutions Architect Badge"
              class="w-16 h-16 object-contain"
            />
          </div>
          <h5 class="text-lg font-semibold mb-2">
            AWS Certified Solutions Architect â€“ Associate
          </h5>
          <p class="text-[var(--white-icon)] text-sm">Amazon Web Services</p>
        </div>
        <div
          class="bg-[#1414149c] rounded-xl p-6 border border-[var(--white-icon-tr)] text-center"
        >
          <div class="w-20 h-20 mx-auto mb-4 flex items-center justify-center">
            <Image
              src={oracleBadge as ImageMetadata}
              alt="Oracle Certified Professional Badge"
              class="w-16 h-16 object-contain"
            />
          </div>
          <h5 class="text-lg font-semibold mb-2">
            Oracle Certified Professional, Java SE 8 Programmer
          </h5>
          <p class="text-[var(--white-icon)] text-sm">Oracle Corporation</p>
        </div>
      </div>
    </div>
  </div>
</section>
